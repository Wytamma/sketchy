profiles {
    local {
        process.executor = "local"
    }
    cluster {
        process.executor = "pbspro"
        process.clusterOptions = "-v PATH=$HOME/miniconda3/bin:$PATH"
    }
}

params {

    fastq                   =           "*.fastq"
    outdir                  =           "nf-sketchy"

    conda                   =           "$HOME/miniconda3/envs"

    sketch                  =           "mrsa"

    // Glob: *.tsv for sketch_files

    sketch_files            =           false
    uuid                    =           false
    kmers                   =           [15, 16, 17, 18, 19, 20, 21]
    hash_sizes              =           [500, 1000, 2000, 4000]

    bootstrap               =           false
    reads                   =           10000
    nboot                   =           100
    stable                  =           500
    top                     =           10

    boot_plot               =           "-g -r -c Blues_r"


    mixture                 =           true
    species                 =           "Staphylococcus aureus"
    online                  =           false

    resources               =           "$HOME/resources"
    taxdb                   =           ["gtdb", "minikraken2", "gtdb_64gb", "kraken2-microbial-fatfree", "maxikraken2_1903_140GB"]

}

process {

    errorStrategy = "ignore"
    scratch = true

    withLabel: sketchy {
        conda = "$params.conda/sketchy"
        cpus = 4
        memory = "8G"
        time = "24h"
    }

    withLabel: kraken2 {
        conda = "$params.conda/pf-kraken"
        cpus = 8
        memory = "160G"
        time = "24h"
    }

}
